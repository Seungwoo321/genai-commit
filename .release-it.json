{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true,
    "requireBranch": ["main", "develop"]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": true,
    "access": "public",
    "publishArgs": ["--provenance"],
    "skipChecks": true
  },
  "hooks": {
    "before:init": ["npm run build"],
    "after:bump": ["npm run build"]
  }
}
